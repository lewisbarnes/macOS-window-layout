---
import '../styles/globals.css';
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col h-screen font-inter">
    <div class="rounded-xl absolute inset-4 bg-[#1B1E28]">
			<div class="flex gap-1 p-2">
				<div class="bg-[#767C9D] p-2 my-auto rounded-full"/>
				<div class="bg-[#767C9D] p-2 my-auto rounded-full"/>
				<div class="bg-[#767C9D] p-2 my-auto rounded-full"/>
				<div class="text-[#767C9D] flex-grow text-center text-sm">{title}</div>
				<div/>
			</div>
			<div class="bg-white absolute inset-2 top-8 rounded-lg">
				<slot />
			</div>
    </div>
  </body>
</html>
